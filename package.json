{
  "name": "tests-selector",
  "version": "1.0.1",
  "description": "Makes it easy to select tests for local test runs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "prepublish": "tsc",
  "scripts": {
    "build": "tsc",
    "codeCheck": "tsc && tslint -p tsconfig.json",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-coverage": "jest --watchAll --coverage && http-serve coverage"
  },
  "author": "Gennadii Mishchevskii",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gennadiii/tests-selector.git"
  },
  "bugs": {
    "url": "https://github.com/Gennadiii/tests-selector/issues"
  },
  "homepage": "https://github.com/Gennadiii/tests-selector/blob/master/README.md",
  "files": ["dist/**/*"],
  "dependencies": {
    "multiselect-prompt": "0.3.2",
    "select-prompt": "0.3.2"
  },
  "devDependencies": {
    "@types/node": "14.6.0",
    "jest": "26.4.0",
    "ts-jest": "26.3.0",
    "ts-node": "9.0.0",
    "tslint": "6.1.3",
    "typescript": "3.9.7"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRegex": "/__tests__/.*test.ts$",
    "coverageReporters": [
      "html",
      "text-summary"
    ],
    "collectCoverageFrom": [
      "index.ts",
      "src/**/*ts"
    ]
  }
}
